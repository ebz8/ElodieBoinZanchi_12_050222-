{
    "plugins": ["plugins/markdown"],
    "source": {
        "include": ["src"], 
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {                      
        "destination": "../docs",          
        "recurse": true,
        "plugins": ["node_modules/better-docs/typescript"],
        "templates": {
          "better-docs": {
            "name": "My React components"
          }
        },
        "source": {
            "includePattern": "\\.(jsx|js|ts|tsx)$"
        }
    }
}
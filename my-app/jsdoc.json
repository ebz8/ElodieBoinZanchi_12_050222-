{
    "plugins": ["plugins/markdown"],
    "source": {
        "include": ["src"], 
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {                      
        "destination": "./documentation",          
        "recurse": true,
        "template": "node_modules/better-docs"
    }
}